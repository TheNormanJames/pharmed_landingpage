mixin Card(features)
 each feature, index in features
  .rounded-lg.border.bg-card.text-card-foreground.shadow-sm.overflow-hidden.showScroll.border-gray-100
   .p-6.flex.flex-col.items-center.text-center.space-y-4
    .rounded-full.p-4(class='bg-[#5586DF]/10')
     case feature.icon
      when 'lucide-book-open'
       svg.lucide.h-10.w-10(class=`text-[#5586DF] ${feature.icon}` xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
        path(d='M12 7v14')
        path(d='M3 18a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h5a4 4 0 0 1 4 4 4 4 0 0 1 4-4h5a1 1 0 0 1 1 1v13a1 1 0 0 1-1 1h-6a3 3 0 0 0-3 3 3 3 0 0 0-3-3z')
